<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="82dp"
             android:background="@drawable/navi_single_item_bg"> <!-- 设置背景为我们自己设计的样式  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/item_single_image"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_single_firsttxt"
                android:textColor="@color/main_subject_color"
                android:textSize="@dimen/subject"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:id="@+id/item_single_secondtxt"
                android:textColor="@color/sub_subject_color"
                android:textSize="@dimen/description"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>